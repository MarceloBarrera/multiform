{
  "name": "playground-react-multi",
  "description": "Playground with multi forms and react",
  "scripts": {
    "start": "webpack serve --config webpack.config.dev.js --port 3000",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --collect-coverage"
  },
  "jest": {
    "setupFiles": [
      "./tools/testSetup.js"
    ]
  },
  "dependencies": {
    "bootstrap": "4.3.1",
    "password-validator": "5.1.1",
    "prop-types": "15.7.2",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-redux": "6.0.1",
    "react-router-dom": "5.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@types/react": "17.0.8",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/parser": "^4.26.1",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "babel-preset-react-app": "7.0.2",
    "classnames": "2.3.1",
    "css-loader": "2.1.1",
    "cssnano": "4.1.10",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "eslint": "5.15.2",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-react": "7.12.4",
    "html-webpack-plugin": "5.3.1",
    "jest": "24.5.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-fetch": "2.3.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "ts-loader": "9.2.2",
    "typescript": "^4.3.2",
    "webpack": "5.37.1",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2"
  },
  "engines": {
    "node": ">=8"
  },
  "babel": {
    "presets": [
      "babel-preset-react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/react"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn",
      "import/extensions": [
        ".js",
        ".jsx",
        ".json",
        ".ts",
        ".tsx"
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".tsx",
            ".ts"
          ]
        }
      }
    },
    "root": true
  }
}
